{
	"editor.fontWeight": "bold",
	"editor.fontSize": 13,
	"editor.tabSize": 2,

	"eslint.enable": true,
	"editor.formatOnType": false,
	"editor.formatOnSave": false,
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": true
	},
	"eslint.alwaysShowStatus": true,
	"eslint.validate": [
		"vue",
		"js",
		"ts",
		"typescript"
	],
	"eslint.options": {
		"extensions": [".js", ".jsx", ".ts", ".tsx"]
	}
}